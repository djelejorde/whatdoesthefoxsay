{
    "name": "djelejordesera/live-coding",
    "description": "Denver Elejorde Live Coding Exam",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Denver\\NumberTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Denver\\NumberTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "friendsofphp/php-cs-fixer": "2.16"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix ./src ",
        "test-cs": "php-cs-fixer fix ./tests --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
  }
  